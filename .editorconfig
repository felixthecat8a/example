# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# HTML files
[*.html]
max_line_length = 120

# SCSS files
[*.{scss,css}]
max_line_length = 100

# JavaScript files
[*.js]
quote_type = single
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off
